{
  "info": {
    "name": "Recipe Management API",
    "description": "Complete API collection for Recipe Management System with JWT, OTP, Refresh Token",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3002/api"
    },
    {
      "key": "userToken",
      "value": ""
    },
    {
      "key": "adminToken",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "1. Users",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@test.com\",\n  \"username\": \"testuser\",\n  \"password\": \"password123\",\n  \"role\": \"user\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/register",
              "host": ["{{baseUrl}}"],
              "path": ["users", "register"]
            }
          }
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@test.com\",\n  \"otp\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/verify-otp",
              "host": ["{{baseUrl}}"],
              "path": ["users", "verify-otp"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('userToken', response.accessToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@test.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/login",
              "host": ["{{baseUrl}}"],
              "path": ["users", "login"]
            }
          }
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/me",
              "host": ["{{baseUrl}}"],
              "path": ["users", "me"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["users", "refresh"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/logout",
              "host": ["{{baseUrl}}"],
              "path": ["users", "logout"]
            }
          }
        },
        {
          "name": "Get All Users (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users",
              "host": ["{{baseUrl}}"],
              "path": ["users"]
            }
          }
        }
      ]
    },
    {
      "name": "2. Ingredients",
      "item": [
        {
          "name": "Create Ingredient (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Tomato\",\n  \"category\": \"Vegetable\",\n  \"unit\": \"kg\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/ingredients",
              "host": ["{{baseUrl}}"],
              "path": ["ingredients"]
            }
          }
        },
        {
          "name": "Get All Ingredients",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/ingredients",
              "host": ["{{baseUrl}}"],
              "path": ["ingredients"]
            }
          }
        },
        {
          "name": "Get Ingredient By ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/ingredients/:id",
              "host": ["{{baseUrl}}"],
              "path": ["ingredients", ":id"]
            }
          }
        },
        {
          "name": "Update Ingredient (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Cherry Tomato\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/ingredients/:id",
              "host": ["{{baseUrl}}"],
              "path": ["ingredients", ":id"]
            }
          }
        },
        {
          "name": "Delete Ingredient (Admin)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/ingredients/:id",
              "host": ["{{baseUrl}}"],
              "path": ["ingredients", ":id"]
            }
          }
        }
      ]
    },
    {
      "name": "3. Recipes",
      "item": [
        {
          "name": "Create Recipe",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Pasta Carbonara\",\n  \"description\": \"Classic Italian pasta\",\n  \"category\": \"Main Course\",\n  \"cookingTime\": 30,\n  \"difficulty\": \"Medium\",\n  \"instructions\": \"1. Boil pasta\\n2. Cook bacon\\n3. Mix\",\n  \"imageUrl\": \"https://example.com/pasta.jpg\",\n  \"ingredients\": [\n    {\n      \"ingredientId\": \"INGREDIENT_ID\",\n      \"quantity\": \"500\",\n      \"unit\": \"g\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/recipes",
              "host": ["{{baseUrl}}"],
              "path": ["recipes"]
            }
          }
        },
        {
          "name": "Get All Recipes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/recipes",
              "host": ["{{baseUrl}}"],
              "path": ["recipes"]
            }
          }
        },
        {
          "name": "Get Recipe By ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/recipes/:id",
              "host": ["{{baseUrl}}"],
              "path": ["recipes", ":id"]
            }
          }
        },
        {
          "name": "Update Recipe",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Pasta\",\n  \"cookingTime\": 25\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/recipes/:id",
              "host": ["{{baseUrl}}"],
              "path": ["recipes", ":id"]
            }
          }
        },
        {
          "name": "Delete Recipe",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/recipes/:id",
              "host": ["{{baseUrl}}"],
              "path": ["recipes", ":id"]
            }
          }
        }
      ]
    },
    {
      "name": "4. Reviews",
      "item": [
        {
          "name": "Create Review",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"recipeId\": \"RECIPE_ID\",\n  \"rating\": 5,\n  \"comment\": \"Amazing recipe!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/reviews",
              "host": ["{{baseUrl}}"],
              "path": ["reviews"]
            }
          }
        },
        {
          "name": "Get All Reviews",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/reviews",
              "host": ["{{baseUrl}}"],
              "path": ["reviews"]
            }
          }
        },
        {
          "name": "Update Review Status (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"approved\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/reviews/:id/status",
              "host": ["{{baseUrl}}"],
              "path": ["reviews", ":id", "status"]
            }
          }
        },
        {
          "name": "Delete Review",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/reviews/:id",
              "host": ["{{baseUrl}}"],
              "path": ["reviews", ":id"]
            }
          }
        }
      ]
    }
  ]
}
