{
  "info": {
    "name": "Recipe Management API",
    "description": "Complete Recipe Management System with PostgreSQL",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"username\": \"testuser\",\n  \"password\": \"test123\",\n  \"role\": \"user\"\n}"
            },
            "url": {
              "raw": "http://localhost:3001/api/users/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "users", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "http://localhost:3001/api/users/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "users", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Ingredients",
      "item": [
        {
          "name": "Get All Ingredients",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:3001/api/ingredients",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "ingredients"]
            }
          }
        },
        {
          "name": "Get Ingredient by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:3001/api/ingredients/:id",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "ingredients", ":id"]
            }
          }
        },
        {
          "name": "Create Ingredient (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"New Ingredient\",\n  \"unit\": \"kg\"\n}"
            },
            "url": {
              "raw": "http://localhost:3001/api/ingredients",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "ingredients"]
            }
          }
        }
      ]
    },
    {
      "name": "Recipes",
      "item": [
        {
          "name": "Get All Recipes",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:3001/api/recipes",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "recipes"]
            }
          }
        },
        {
          "name": "Get Recipe by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:3001/api/recipes/:id",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "recipes", ":id"]
            }
          }
        },
        {
          "name": "Create Recipe",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"My Recipe\",\n  \"description\": \"Delicious recipe\",\n  \"category\": \"Dessert\",\n  \"cookingTime\": 30,\n  \"difficulty\": \"medium\",\n  \"instructions\": \"Step by step instructions\",\n  \"imageUrl\": \"https://example.com/image.jpg\",\n  \"ingredients\": [\n    {\n      \"ingredientId\": \"INGREDIENT_UUID\",\n      \"quantity\": 0.5,\n      \"unit\": \"kg\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "http://localhost:3001/api/recipes",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "recipes"]
            }
          }
        }
      ]
    },
    {
      "name": "Reviews",
      "item": [
        {
          "name": "Get All Reviews",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:3001/api/reviews",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "reviews"]
            }
          }
        },
        {
          "name": "Create Review",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"recipeId\": \"RECIPE_UUID\",\n  \"rating\": 5,\n  \"comment\": \"Excellent recipe!\"\n}"
            },
            "url": {
              "raw": "http://localhost:3001/api/reviews",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "reviews"]
            }
          }
        },
        {
          "name": "Approve Review (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"approved\"\n}"
            },
            "url": {
              "raw": "http://localhost:3001/api/reviews/:id/status",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "reviews", ":id", "status"]
            }
          }
        }
      ]
    }
  ]
}
